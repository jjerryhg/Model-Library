
@{
    ViewBag.Title = "Info";
}

@Styles.Render("~/Content/main")
@Styles.Render("~/Content/DarkMode")

<main id="content" style="margin-left: 50px; margin-top: 70px;">
    <section id="info-mode">
        <div class="info-mode-wrapper">
            <div class="info-mode-container">
                <div class="info-mode-header justify-content-between">
                    <div class="ms-2">
                        <span>Info</span>
                    </div>
                </div>
                <div class="info-mode-body d-flex flex-column">
                    <div class="ms-5 mt-4 mb-4">
                        <span><b>Case Name: </b><span>TEST 00</span></span>
                    </div>
                </div>
                <div class="info-mode-footer">
                    <div class="table-container ms-5 mt-3 me-5">
                        <table class="table table-bordered" id="info-mode-table">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Attribute</th>
                                    <th scope="col">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">Attribute00</th>
                                    <td>Value00</td>
                                </tr>
                                <tr>
                                    <th scope="row">Attribute01</th>
                                    <td>Value01</td>
                                </tr>
                                <tr>
                                    <th scope="row">Attribute02</th>
                                    <td>Value02</td>
                                </tr>
                                <tr>
                                    <th scope="row">Attribute03</th>
                                    <td>Value03</td>
                                </tr>
                            </tbody>
                        </table>
                        <ul class="pagination justify-content-center" id="Infopagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script src="~/Scripts/main.js"></script>
<script src="~/Scripts/info.js"></script>

